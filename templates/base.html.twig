<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Back office!
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
            <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        {% endblock %}

        {% block javascripts %}
            <script defer src='{{asset("js/sidebar.js")}}'></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <main>
            <div id='navDesktop' class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                    <img src="{{ asset("images/logo_transparent.png") }}" class="bi me-2" width="40" height="40">
                    <span class="fs-4">Back Office</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="{{path('app_admin')}}" class="nav-link link-dark" aria-current="page">
                            <i class="bi bi-house-door me-2"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_user')}}" class="nav-link link-dark">
                            <i class="bi bi-person-circle me-2"></i>
                            Users
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nft')}}" class="nav-link link-dark">
                            <i class="bi bi-grid me-2"></i>
                            NFTs
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nftModel')}}" class="nav-link link-dark">
                            <i class="bi bi-box me-2"></i>
                            Model
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nftCollection')}}" class="nav-link link-dark">
                            <i class="bi bi-collection me-2"></i>
                            Collection
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_category')}}" class="nav-link link-dark">
                            <i class="bi bi-bookmark me-2"></i>
                            Category
                        </a>
                    </li>
                    <li>
                        <a href="{{path('app_logout')}}" class="nav-link link-dark">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Logout
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
            <div id="navMobile" class="d-flex flex-column flex-shrink-0 bg-light" style="width: 4.5rem;">
                <a href="/" class="d-block p-3 link-dark text-decoration-none" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="CreateYourAvatar">
                    <img src="{{ asset("images/logo_transparent.png") }}" class="me-2" width="40" height="40">
                    <span class="visually-hidden">Icon-only</span>
                </a>
                <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                    <li>
                        <a href="{{ path('app_admin')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Home">
                            <i class="bi bi-house-door me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_user')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="User">
                            <i class="bi bi-person-circle me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nft')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Nft">
                            <i class="bi bi-grid me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nftModel')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Model">
                            <i class="bi bi-box me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_nftCollection')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Collection">
                            <i class="bi bi-collection me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_admin_category')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Category">
                            <i class="bi bi-bookmark me-2"></i>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout')}}" class="nav-link py-3 border-bottom" title="" data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>
                        </a>
                    </li>
                </ul>
                <div class="dropdown border-top">
                    <a href="#" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="mdo" width="24" height="24" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
                        <li>
                            <a class="dropdown-item" href="#">New project...</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">Settings</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#">Profile</a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="{{path('app_logout')}}">Sign out</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="b-divider"></div>
            <div id="mainContent" class="w-100 pt-4">
                <div class="w-100 container">
                    <div class='d-flex justify-content-end'>
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                                {% if app.user %}
                                    <img
                                    src="{{ asset('images/userImages/' ~ app.user.userImage.name) }}" width="32" height="32" class="rounded-circle me-2">
                                    {# <img src="{{ vich_uploader_asset(app.user.userImage, 'file','app_admin') }}" width="32" height="32" class="rounded-circle me-2"> #}

                                    <strong>{{ app.user.email }}</strong>
                                {% endif %}
                            </a>
                            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">

                                <li>
                                    <a class="dropdown-item" href="#">Settings</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">Profile</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="{{path('app_logout')}}">Sign out</a>
                                </li>
                            </ul>
                        </div>

                    </div>
                    {% block messages %}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock messages %}
                    {% block body %}{% endblock %}
                </div>
            </div>
        </main>
    </body>
</html>
