{% extends 'base.html.twig' %}

{% block title %}Form user
{% endblock %}

{% block body %}
    {% form_theme form with [
    'bootstrap_5_horizontal_layout.html.twig'
    ] %}

    <section class="pb-5">
        <h1>
            {% if isCreation %}
                Creation User !
            {% else %}
                Update User !
            {% endif %}
        </h1>

        <h2>Form</h2>
        {{ form_start(form) }}

        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(form) }}

    </section>

{% endblock %}
